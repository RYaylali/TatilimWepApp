@using Tatilim.EntityLayer.Concrete;
@model List<AppUser>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<h1>Kullanıcı Listesi</h1>


<table class="table table-xs mb-0">
	<thead>
		<tr>
			<th>#</th>
			<th>Ad Soyad</th>
			<th>Rol Ata</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td><img src="@item.ImageUrl" class=" rounded-circle mr-3" alt=""> @item.Name @item.Surname</td>
				<td><a href="/RoleAssign/AssignRole/@item.Id" class="btn btn-warning">Rol Ata</a></td>
			</tr>
		}
	</tbody>
</table>
<br />
<a href="/Register/Register/" class="btn btn-primary">Yeni Kullanıcı Ekle</a>
