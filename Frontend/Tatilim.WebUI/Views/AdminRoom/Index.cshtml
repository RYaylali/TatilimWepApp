@model List<ResultRoomDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
    int count = 0;
}
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Oda Numarası</th>
        <th>Başlık</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@count + 1</th>
            <td>@item.RoomNumber</td>
            <td>@item.Title</td>
            <td><a href="/Room/DeleteRoom/@item.RoomID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Room/UpdateRoom/@item.RoomID" class="btn btn-success">Güncelle</a></td>
            <td><a href="#" class="btn btn-dark">Detaylar</a></td>
        </tr>
    }
</table>
<a href="/AdminRoom/AddRoom" class="btn btn-info"> Yeni Oda Girişi</a>