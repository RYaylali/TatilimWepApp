@model List<ResultBookingDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
    int count = 0;
}

<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <div class="card-title">
                <h4>Rezervasyonlar</h4>
            </div>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Misafir</th>
                            <th>Giriş</th>
                            <th>Çıkış</th>
                            <th>Durum</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                           count ++;
                             <tr>
                            <th>@count </th>
                            <td>@item.Name</td>
                            <td>@item.Chaeckin </td>
                            <td>@item.ChaeckOut </td>
                            <td>@item.Status</td>
                            <td><a href="" class="btn btn-outline-primary">Onayla</a></td>
                            <td><a href="" class="btn btn-outline-danger">İptal Et</a></td>
                            <td><a href="" class="btn btn-outline-warning">Beklet</a></td>
                            <td><a href="" class="btn btn-outline-İnfo">Detaylar</a></td>
                            <td><a href="" class="btn btn-outline-dark">Güncelle</a></td>
                        </tr>
                        }
                       
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
