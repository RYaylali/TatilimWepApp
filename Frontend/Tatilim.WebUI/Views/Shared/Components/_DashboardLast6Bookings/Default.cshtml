@model List<Result6LastBookingDto>
<div class="row">
	<div class="col-lg-12">
		<div class="card">
			<div class="card-body">
				<div class="active-member">
					<div class="table-responsive">
						<table class="table table-xs mb-0">
							<thead>
								<tr>
									<th>Müşteri</th>
									<th>Şehir</th>
									<th>Ülke</th>
									<th>Durum</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.Name</td>
										<td>@item.City</td>
										<td>
											<span>@item.Country</span>
										</td>
										@if (item.Status == "Onaylandı")
										{
											<td>
												<div>
													<div class="progress" style="height: 6px">
														<div class="progress-bar bg-success" style="width: 100%"></div>
													</div>
												</div>
											</td>
											<td><i class="fa fa-circle-o text-success  mr-2"></i> Onaylandı</td>
										}
										@if (item.Status == "Onaylanmadıdı")
										{
											<td>
												<div>
													<div class="progress" style="height: 6px">
														<div class="progress-bar bg-success" style="width: 0%"></div>
													</div>
												</div>
											</td>
											<td><i class="fa fa-circle-o text-warning  mr-2"></i> Onaylanmadı</td>
										}
									</tr>
								}

							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
