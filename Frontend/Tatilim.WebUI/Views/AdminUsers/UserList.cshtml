@using Tatilim.WebUI.Dtos.AppUserDto;
@model List<ResultAppUserListDto>

@{
	ViewData["Title"] = "UserList";
	Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<table class="table table-xs mb-0">
	<thead>
		<tr>
			<th>#</th>
			<th>Ad Soyad</th>
			<th>Şehir</th>
			<th>Ülke</th>
			<th>Durum</th>
			<th>Cinsiyet</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td><img src="@item.ImageUrl" class=" rounded-circle mr-3" alt=""> </td>
				<td>@item.Name @item.Surname</td>
				<td>@item.City</td>
				<td>@item.Country</td>
				@if (item.Gender=="Erkek")
				{
					<td>
						<div>
							<div class="progress" style="height:6px">
								<div class="progress-bar bg-success" style="width:800%"></div>
							</div>
						</div>
					</td>
				}
				@if (item.Gender == "Kadın")
				{
					<td>
						<div>
							<div class="progress" style="height:6px">
								<div class="progress-bar bg-warning" style="width:90%"></div>
							</div>
						</div>
					</td>
				}
				@if (item.Gender == "Erkek")
				{
					<td><i class="fa fa-circle-o text-success  mr-2"></i> Erkek</td>
				}
				@if (item.Gender == "Kadın")
				{
					<td><i class="fa fa-circle-o text-warning  mr-2"></i> Kadın</td>
				}
			</tr>
		}
	</tbody>
</table>
<br />
<a href="/Register/Register/" class="btn btn-primary">Yeni Kullanıcı Ekle</a>

